<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <TextView
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/product_name"
        android:text="物品名称 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/product_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/product_name"
        android:layout_alignBottom="@+id/product_name"
        android:layout_alignStart="@+id/product_desc_id"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:textColor="#00CD00" />
    <TextView
        android:id="@+id/product_desc"
        android:layout_below="@id/product_name"
        android:text="物品信息 : "
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/product_desc_id"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/product_name_id"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/mynum"
        android:text="联系方式 : "
        android:layout_below="@id/product_desc_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/num"
        android:text="XXXXXXXXXXX"
        android:layout_alignBaseline="@id/mynum"
        android:layout_toRightOf="@id/mynum"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/product_price"
        android:text="物品价格 : "
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_below="@id/mynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/product_price_id"
        android:textColor="#EE0000"
        android:text="XXXXXXX"
        android:layout_alignBaseline="@id/product_price"
        android:layout_marginTop="5dp"
        android:layout_below="@id/product_desc_id"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/product_price"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/product_price_id_yuan"
        android:text="元"
        android:layout_alignBaseline="@id/product_price"
        android:layout_marginTop="5dp"
        android:layout_below="@id/product_desc_id"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/product_price_id"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/product_add"
        android:text="货源地址 : "
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_below="@id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/adderer"
        android:textColor="#000000"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:layout_alignBaseline="@id/product_add"
        android:layout_marginTop="5dp"
        android:layout_below="@id/product_price"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/product_add"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/product_img"
        android:layout_marginTop="10dp"
        android:src="@drawable/prodct_png"
        android:layout_below="@id/adderer"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="220dp" />

</RelativeLayout>